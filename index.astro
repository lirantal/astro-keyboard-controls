---
export type Props = {
    selector: string;
    key: string;
}

const { selector, key }  = Astro.props
---

<script is:inline define:vars={{selector, key}} >
    if (selector && key) {
        window.addEventListener('keydown', (event) => {
            if (event.key === key) {
                event.preventDefault();
                document.querySelector(selector).focus();
            }
        });
    }
</script>